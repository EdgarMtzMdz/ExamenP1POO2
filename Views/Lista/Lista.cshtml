@model IEnumerable<ListaModel>
@{
    ViewData["Tile"] = "Listas de Escuelas";
}

<div class="text-center">
    <h1 class="display-2">Lista de Escuelas</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Acciones</th>
            <th>Nombre</th>
            <th>Num Alumnos</th>
            <th>Presupuesto</th>
        </tr>    
    </thead>

    <tbody>
        @foreach (var Lista in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@Lista.Id" class="id" />
                    <a class="btn btn-primary" asp-controller="Lista" asp-action="ListaAdd" asp-route-Id="@Lista.Id">Editar</a>
                    <a class="btn btn-danger" asp-controller="Lista" asp-action="ListaDelete" asp-route-Id="@Lista.Id">Borrar</a>
                </td>
                <td>
                    @Lista.Nombre
                </td>
                <td>
                    @Lista.NumAlumnos
                </td>
                <td>
                    @Lista.Presupuesto
                </td>
            </tr>
        }
    </tbody>
    
</table>

